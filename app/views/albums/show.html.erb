<h1><%= @album.name %></h1>

<form action="<%= tracks_url %>" method="post" >
  <input
     type="hidden"
     name="authenticity_token"
     value="<%= form_authenticity_token %>">

  <label for="track_name">Name</label>
  <input type="text"
         name="track[name]"
         id="track_name"
        >

  <input
    type="radio"
    name="track[track_type]"
    value="regular"
    id="track_type_regular">
  <label for="track_type_regular">Regular</label>
  <input
    type="radio"
    name="track[track_type]"
    value="regular"
    id="track_type_bonus">
  <label for="track_type_bonus">Bonus</label>

  <input
     type="hidden"
     name="track[album_id]"
     value="<%= @album.id %>">

  <input type="submit">

<% @album.tracks.each do |track| %>
  <p><a href="<%= track_url(track) %>"><%= track.name %></a></p>

<% end %>
<br /><br />

<a href="<%= band_url(@album.band) %>">Back to albums</a>

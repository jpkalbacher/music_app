<h1>Add a new album!</h1>

<form action="<%= albums_url %>" method="post" >
  <%= auth_token %>

  <label for="album_name">Name</label>
  <input type="text"
         name="album[name]"
         id="album_name"
        >

  <select name="album[band_id]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%= band.name %></option>
    <% end %>
  </select>

  <input
    type="radio"
    name="album[recording_type]"
    value="studio"
    id="album_recording_type_studio">
  <label for="album_recording_type_studio">Studio</label>
  <input
    type="radio"
    name="album[recording_type]"
    value="live"
    id="album_recording_type_live">
  <label for="track_type_bonus">Live</label>


  <input type="submit">

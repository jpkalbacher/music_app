<h1>Check out all these sweet bands!</h1>
<% @bands.each do |band|%>
  <p>
    <a href="<%= band_url(band)%>"><%= band.name %></a>
    <a href="<%= edit_band_url(band )%>">Edit</a><%= button_to "delete",
      {:controller => :bands, :action => 'destroy', :id => band.id },
       :method => :delete %>

    Added <%= time_ago_in_words(band.created_at) %> ago.
  </p>
<% end %>
